<?xml version="1.0"?>
<assembly>
    <id>plugin-agent-assembly</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../sonar-plugin-agent/sonar-qube-runner/</directory>
            <outputDirectory>/sonar-qube-runner</outputDirectory>
            <includes><include>**/*</include></includes>
        </fileSet>
        <fileSet>
            <directory>../sonar-plugin-agent/sonarscanner_for_msbuild/</directory>
            <outputDirectory>/sonarscanner_for_msbuild</outputDirectory>
            <includes><include>**/*</include></includes>
        </fileSet>
        <fileSet>
            <directory>../sonar-plugin-agent/</directory>
            <outputDirectory>/</outputDirectory>
            <includes><include>teamcity-plugin.xml</include></includes>
        </fileSet>
    </fileSets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>jetbrains.buildServer.sonarplugin:sonar-plugin-agent</include>
                <include>jetbrains.buildServer.sonarplugin:sonar-plugin-common</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <includes>
                            <include>*</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>

